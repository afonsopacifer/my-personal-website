extends ./layouts/default.jade

block page_infos
	-var title = "Projects"
	-var description = ""
	-var keywords = ""

block content

	//- Updates
	//- ===========================================
	main.main

		div.container

			//- Projects
			section.section.project
				h2.heading-lv2 Projects

				div.list-articles

					- for project in projects
						- var name = project.name
						- var user = project.user
						- var emoji = project.emoji
						- var url = project.url
						- var description = project.description

							article.article
								h3.heading-lv3
									//- img(src="assets/img/emojis/"+emoji class="emojis")
									span=name
										//- div.star
										//- 	iframe(class="star-count" src="https://ghbtns.com/github-btn.html?user="+user+"&repo="+name+"&type=star&count=true" frameborder="0" scrolling="0")
								p.paraghaph=description
								div.tags-container
									- each tag in project.tags
										a(href="tags/"+tag+".html" class="tag")=tag
