doctype html
html(lang="en")

	// head
	// -----------------------------------------
	head
		// head requests
		include ./includes/head-requests.jade
		
		// SEO
		meta(name="keywords" content="Afonso Pacifer, Front-End, HTML5, CSS, CSS3, Javascript")
		meta(name="description" content="")
		title Projects by Afonso Pacifer

	body

		// top bar
		// -----------------------------------------
		include ./includes/top-bar.jade
					
		// main
		// -----------------------------------------
		main.main
			div.container
				h1.heading-lv1 Projects
				
			// Project 
			// Get and parse the projects.json file by Grunt
			- for (var i = 0; i < projects.length; i++)
				- var nome = projects[i].name
					a(href="#" class="project")
						h2.heading-lv2=nome
							div.star-buttom
								div.star
								iframe(class="star-count" src="https://ghbtns.com/github-btn.html?user=afonsopacifer&repo=flex-grid-framework&type=star&count=true" frameborder="0" scrolling="0")
						p.paragraph A project to honor those developers who believed in the challenge.
			
			div.container-centered
				a(href="#" class="btn") See all projects
				

		// footer
		// -----------------------------------------
		include ./includes/footer.jade
			
		// bottom requests
		// -----------------------------------------
		include ./includes/bottom-requests.jade
