doctype html
html(lang="en" prefix="og: http://ogp.me/ns#")

	// head
	// -----------------------------------------
	head
		// head requests
		include ./includes/head-requests.jade
		
		//Page infos
		-var title = "Articles by Afonso Pacifer"
		-var description = "The list of articles written by Afonso pacifer"
		
		// SEO
		meta(name="keywords" content="Afonso Pacifer, Front-End, HTML5, CSS3, Javascript, Articles")
		meta(name="description" content=description)
		meta(name="robots" content="index,follow")
		title= title

		// Open Graph
		meta(property="og:type" content="website")
		meta(property="og:title" content= title)
		meta(property="og:description" content=description)
		meta(property="og:url" content="http://afonsopacifer.com/articles.html")
		meta(property="og:image" content="http://afonsopacifer.com/assets/img/afonso-pacifer.png")

		// Twitter Cards
		meta(name="twitter:card" content="summary_large_image")
		meta(name="twitter:title" content= title)
		meta(name="twitter:description" content=description)
		meta(name="twitter:url" content="http://afonsopacifer.com/articles.html")
		meta(name="twitter:image" content="http://afonsopacifer.com/assets/img/afonso-pacifer.png")
		
	body

		// top bar
		// -----------------------------------------
		include ./includes/top-bar.jade
					
		// main
		// -----------------------------------------
		main.main
			div.container
				h1.heading-lv1 Articles
		
			// Articles
			// Get and parse the projects.json file by Grunt	
			- for (var i = 0; i < articles.length; i++)
				- var img = articles[i].img
				- var alt = articles[i].alt
				- var name = articles[i].name
				- var description = articles[i].description
				- var url = articles[i].url
				- var date = articles[i].date
				- var local = articles[i].local
					article(class="article" itemscope itemtype="http://schema.org/Article")
						img(src="assets/img/articles-covers/"+img alt=alt itemprop="image")
						h2(class="heading-lv2" itemprop="headline")=name
						p.paragraph
							b.strong Published: 
							span(itemprop="datePublished")=date
						p(class="paragraph")=description
						p.paragraph
							a(href=url class="btn" itemprop="url") Read on 
								span=local

					
		// footer
		// -----------------------------------------
		include ./includes/footer.jade
			
		// bottom requests
		// -----------------------------------------
		include ./includes/bottom-requests.jade
