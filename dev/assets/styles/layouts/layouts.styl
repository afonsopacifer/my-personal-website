// globals
// -----------------------------------------
html,body
	height 100%

body
	height 100%
	background url('../img/bg.jpg')
	background-repeat no-repeat
	background-attachment fixed
	background-position center
	background-size 100% 100%

.main
	row()
	padding-top 40px

.container
	col(12)

.container-centered
	col(12)
	text-align center

// About only
// -----------------------------------------
.main-about
	row()
	justify(center)
	vertical-align(middle)
	height 100%
	padding-top 39px

@media screen and (max-width 480px)
	.main-about
		padding-top 58px

@media screen and (max-height 650px)
	.main-about
		vertical-align()
