@charset "UTF-8"

@import "vendors/normalize"
@import "vendors/flex-grid-framework"
@import "colors"
@import "fonts"
@import "atoms"

body
	background-color dark
	font-family 'Open Sans', sans-serif
	font-size 1em

.top-bar-bg
	background-color over-dark
	width 100%

// menu
.top-bar
	row()

.menu-container
	col(12)
	text-align center

.menu
	padding-left 0
	margin 0

.menu-item
	list-style none

.menu-item a
	color #fff
	padding 10px
	display inline-block

@media screen and (min-width 480px)
	.menu-item
		display inline-block

@media screen and (max-width 480px)
	.menu-item
		background-color over-dark
		border-top 1px solid dark
		width 100%

	.menu-item a
		width 100%

.menu-open
	display none

@media screen and (max-width 480px)
	.menu-open
		display inline-block
		padding 15px

.container
	max-width 900px
	width 100%
	margin 0 auto
	text-align center
	padding 20px

.photo
	width 100%
	max-width 250px
	margin-top 50px

.about
	margin 50px 0

.icons
	width 100%
	text-align center

.title
	text-align center

.footer
	background-color over-dark
	text-align center
	width 100%
	padding 10px
	margin-top 50px
	position relative

@media (min-height 742px)
	.footer
		position absolute
		bottom 0
