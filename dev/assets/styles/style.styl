@charset "UTF-8"

// base
// -----------------------------------------
@import "base/normalize"
@import "base/flex-grid-framework"

// colors
// -----------------------------------------
highlight = #532b74 // #008393 // #45022c
dark-highlight = #381158
complementary = #eeeeee
font-color-dafault = #515151

// layout
// -----------------------------------------
@import "layout/top-bar"
@import "layout/footer"

// global
// -----------------------------------------
html,body
	height 100%

body
	font-family 'Roboto', sans-serif
	font-weight 300
	color font-color-dafault
	height 100%
	background url('../img/bg.jpg')
	background-repeat no-repeat
	background-attachment fixed
	background-position center
	background-size 100% 100%

// Dev view mode
// -----------------------------------------
// div,nav,main,footer,article,a
// 	border 1px dashed

// Componenets
// -----------------------------------------
.main
	row()
	padding-top 40px

.container
	col(12)

.container-centered
	col(12)
	text-align center

// headings
.heading-lv1
	font-size 38px
	margin 40px 0
	font-weight 300
	padding-left 15px
	text-align center
	color #fff

@media screen and (max-width 520px)
	.heading-lv1
		font-size 24px

.heading-lv2
	color highlight
	font-weight 400
	margin 5px
	padding 0
	font-size 24px

// paragraph
.paragraph
	font-size 16px
	margin 5px
	padding 0
	color font-color-dafault

// strong
.strong
	color highlight
	font-weight 400

//project
.project
	col(4)
	background-color #fff
	padding 10px
	margin-top 5px
	margin-bottom 5px
	text-decoration none
	-webkit-transition box-shadow .3s
	transition box-shadow .3s
	position relative

.project h2
	padding-right 90px

.project:hover
	-webkit-box-shadow 0px 0px 14px 0px rgba(50, 50, 50, 0.6)
	-moz-box-shadow 0px 0px 14px 0px rgba(50, 50, 50, 0.6)
	box-shadow 0px 0px 14px 0px rgba(50, 50, 50, 0.6)
	cursor pointer

@media screen and (max-width 850px)
	.project
		col(6)

@media screen and (max-width 560px)
	.project
		col(12)
		margin 5px 10px

//star buttom
.star-buttom
	position absolute
	right 0
	top 10px

.star-count
	width 100px
	height 20px

.star
	width 51.5px
	height 28px
	position absolute
	top 0
	left 0
	background-color #fff
	background-image url('../img/star.png')
	background-repeat no-repeat
	background-position 28px 0px

//article
.article
	col(6)
	offset(3)
	padding 10px
	background #fff
	margin-top 10px
	margin-bottom 10px

@media screen and (max-width 950px)
	.article
		col(8)
		offset(2)

@media screen and (max-width 790px)
	.article
		col(10)
		offset(1)

@media screen and (max-width 630px)
	.article
		col(12)
		offset()
		margin 5px 10px

.article img
	width 100%
	margin-bottom 10px

//btn
.btn
	background-color highlight
	color #fff
	padding 10px 15px
	display inline-block
	margin 10px 0
	text-decoration none
	transition background-color .3s

.btn:hover
	background-color dark-highlight

// About only
// -----------------------------------------
.main-about
	row()
	justify(center)
	vertical-align(middle)
	height 100%
	padding-top 39px

@media screen and (max-width 480px)
	.main-about
		padding-top 58px

@media screen and (max-height 650px)
	.main-about
		vertical-align()

// social
.social-icons-container
	col(12)
	text-align center
	margin 10px 0
	height 60px

.social-icon
	margin 5px
	display inline-block
	background highlight
	border-radius 50%
	transition padding .3s, background .3s, transform .6s
	padding 8px 11px

.social-icon:hover
	background dark-highlight
	padding 12px 15px
	transform rotate(360deg)

@media screen and (max-width 600px)
	.social-icons-container
		padding 0 20%


@media screen and (max-width 390px)
	.social-icons-container
		padding 0 10px

@media screen and (max-width 300px)
	.social-icons-container
		padding 0 20%

	.social-icon
		width 50%

// headings
.heading-about
	margin 40px 0
	text-align center

@media screen and (max-width 480px)
	.heading-about
		font-size 52px

// paragraph
.paragraph-about
	text-align center
	font-size 24px
	padding 0 130px
	color #e7e7e7

.paragraph-about .strong
	color #fff
	font-weight 400

@media screen and (max-width 800px)
	.paragraph-about
		font-size 20px
		padding 0 50px

@media screen and (max-width 480px)
	.paragraph-about
		font-size 18px
		padding 0 20px

//Fun with CSS
.codepen-box
	col(4)

@media screen and (max-width 900px)
	.codepen-box
		col(6)

@media screen and (max-width 600px)
	.codepen-box
		col(12)
