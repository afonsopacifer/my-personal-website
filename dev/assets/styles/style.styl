@charset "UTF-8"

// vendors
// -----------------------------------------
@import "vendors/normalize"
@import "vendors/flex-grid-framework"

// colors
// -----------------------------------------
highlight = #008393
complementary = #eeeeee
font-color-dafault = #515151

// global
// -----------------------------------------
body
	background-color complementary
	font-family 'Roboto', sans-serif
	font-weight 300
	color font-color-dafault

html,body
	height 100%

.row
	row()

div,nav,main,footer
	border 1px dashed #000

// menu
// -----------------------------------------
.top-bar
	background highlight
	width 100%
	text-align center

.menu
	padding-left 0
	margin 0

.menu-item
	list-style none
	display inline-block

.menu-link
	font-size 16px
	color #000
	display inline-block
	text-decoration none
	color #fff
	padding 10px

.menu-link:hover
	color complementary

@media screen and (max-width 480px)
	.menu-item
		display list-item

@media screen and (max-width 480px)
	.menu-item a
		display block
		border-top 1px solid complementary

.menu-open
	display none

@media screen and (max-width 480px)
	.menu-open
		display inline-block
		padding 15px 0

.active
	color complementary

// main
// -----------------------------------------
.container-default
	row()
	justify(center)
	vertical-align(middle)
	height 100%

.home-title
	col(12)

.home-p
	col(12)

.home-txt
	font-size 72px
	font-weight 700
	margin 40px 0
	width 100%
	text-align center
	display block

.p-default
	text-align center
	font-size 24px
	padding 0 150px

// footer
// -----------------------------------------
.footer
	background-color highlight
	text-align center
	padding 10px 0
	margin-top 40px

.text-footer
	font-size 14px
	color #fff
