@charset "UTF-8"

@import "vendors/normalize"
@import "vendors/flex-grid-framework"

over-dark = #ffc600
dark = #f2f2f2
gray = #c2c2c2
pumpkin = #000


body
	background-color dark
	font-family 'Open Sans', sans-serif
	font-size 1em

.top-bar-bg
	background #ffc600
	width 100%

// menu

//headings
h1
	color #fff

h2
	color #fff

//paragraph
.text
	margin 5px 0
	font-size 1em
	color gray

.featured-text
	margin 10px 0
	font-size 1.5em
	color #000

@media (max-width 600px)
	.featured-text
		font-size 1em

//inline texts
strong
	color #000
	font-weight 700

small
	color #000
	font-size 0.8em

//Links
a
	color pumpkin
	text-decoration none
	-webkit-transition opacity .3s
	transition opacity .3s

a:hover
	opacity 0.5

//icons
.github-icon
	font-size 35px
	color #fff

.codepen-icon
	font-size 35px
	color #fff

.twitter-icon
	font-size 35px
	color #fff


.top-bar
	row()

.logo
	col(6)
	font-size 25px
	font-family 'Architects Daughter', cursive
	padding 10px 0

.menu-container
	col(6)
	text-align right

.menu
	padding-left 0
	margin 0

.menu-item
	list-style none

.menu-item a
	font-size 25px
	font-family 'Architects Daughter', cursive
	color #000
	display inline-block

@media screen and (min-width 480px)
	.menu-item
		display inline-block

@media screen and (max-width 480px)
	.menu-item
		background-color over-dark
		border-top 1px solid dark
		width 100%

	.menu-item a
		width 100%

.menu-open
	display none

@media screen and (max-width 480px)
	.menu-open
		display inline-block
		padding 15px

.container
	max-width 900px
	width 100%
	margin 0 auto
	text-align center
	padding 20px

.photo
	width 100%
	max-width 250px
	margin-top 50px

.about
	margin 50px 0

.icons
	width 100%
	text-align center

.title
	text-align center

.footer
	background-color over-dark
	text-align center
	width 100%
	padding 10px
	margin-top 50px
	position relative

@media (min-height 742px)
	.footer
		position absolute
		bottom 0
