@charset "UTF-8"

// base
// -----------------------------------------
@import "base/normalize"
@import "base/flex-grid-framework"

// colors
// -----------------------------------------
highlight = #008393 // #45022c
dark-highlight = #005e6a
complementary = #eeeeee
font-color-dafault = #515151

// layout
// -----------------------------------------
@import "layout/top-bar"
@import "layout/footer"

// global
// -----------------------------------------
html,body
	height 100%

body
	background-color complementary
	font-family 'Roboto', sans-serif
	font-weight 300
	color font-color-dafault
	height 100%

// Dev view mode
// -----------------------------------------
// div,nav,main,footer,article,a
// 	border 1px dashed

// Componenets
// -----------------------------------------
.main
	row()
	padding-top 40px

.container
	col(12)

.container-centered
	col(12)
	text-align center

// headings
.heading-lv1
	font-size 42px
	margin 40px 0
	font-weight 400
	padding-left 15px
	text-align center

// @media screen and (max-width 480px)
// 	.heading-lv1
// 		font-size 52px

.heading-lv2
	color highlight
	font-weight 400
	margin 5px
	padding 0
	font-size 24px

// paragraph
.paragraph
	font-size 16px
	margin 5px
	padding 0
	color font-color-dafault

// strong
.strong
	color highlight
	font-weight 400

//project
.project
	col(4)
	background-color #fff
	padding 10px
	margin-top 5px
	margin-bottom 5px
	text-decoration none
	-webkit-transition box-shadow .3s
	transition box-shadow .3s

.project:hover
	-webkit-box-shadow 0px 0px 14px 0px rgba(50, 50, 50, 0.6)
	-moz-box-shadow 0px 0px 14px 0px rgba(50, 50, 50, 0.6)
	box-shadow 0px 0px 14px 0px rgba(50, 50, 50, 0.6)
	cursor pointer

@media screen and (max-width 850px)
	.project
		col(6)

@media screen and (max-width 560px)
	.project
		col(12)

//star buttom
.star-buttom
		float right
		position relative

.star-count
	width 100px
	height 20px
	background #fff

.star
	width 51.5px
	height 28px
	position absolute
	top 0
	left 0
	background-color #fff
	background-image url('../img/star.png')
	background-repeat no-repeat
	background-position 28px 0px

//article
.article
	col(6)
	offset(3)
	padding 10px 0
	border-bottom 1px dashed font-color-dafault

.article:last-child
	border-bottom 0

@media screen and (max-width 950px)
	.article
		col(8)
		offset(2)

@media screen and (max-width 790px)
	.article
		col(10)
		offset(1)

@media screen and (max-width 630px)
	.article
		col(12)
		offset()

.article img
	width 100%
	margin 10px 0

//talk
.talk
	col(4)
	offset(4)
	padding 10px 0
	border-bottom 1px dashed font-color-dafault

.talk:last-child
	border-bottom 0

@media screen and (max-width 1000px)
	.talk
		col(6)
		offset(3)

@media screen and (max-width 690px)
	.talk
		col(10)
		offset(1)

@media screen and (max-width 450px)
	.talk
		col(12)
		offset()

//btn
.btn
	background-color highlight
	color #fff
	padding 10px 15px
	display inline-block
	margin 10px 0
	text-decoration none
	transition background-color .3s

.btn:hover
	background-color dark-highlight

// About only
// -----------------------------------------
.main-about
	row()
	justify(center)
	vertical-align(middle)
	height 100%
	padding-top 39px

@media screen and (max-width 480px)
	.main-about
		padding-top 58px

@media screen and (max-height 650px)
	.main-about
		vertical-align()

// social
.social-icons-container
	col(12)
	text-align center
	margin 10px 0

.social-icon
	padding 5px 7px
	display inline-block

@media screen and (max-width 600px)
	.social-icons-container
		padding 0 20%

	.social-icon
		width 25%

@media screen and (max-width 390px)
	.social-icons-container
		padding 0 10%

@media screen and (max-width 300px)
	.social-icons-container
		padding 0 20%

	.social-icon
		width 50%

// headings
.heading-about
	font-size 64px
	margin 40px 0
	font-weight 400
	text-align center

@media screen and (max-width 480px)
	.heading-about
		font-size 52px

// paragraph
.paragraph-about
	text-align center
	font-size 24px
	padding 0 130px

@media screen and (max-width 800px)
	.paragraph-about
		font-size 20px
		padding 0 50px

@media screen and (max-width 480px)
	.paragraph-about
		font-size 18px
		padding 0 20px
