@charset "UTF-8"

// base
// -----------------------------------------
@import "base/normalize"
@import "base/flex-grid-framework"

// colors
// -----------------------------------------
highlight = #008393
complementary = #eeeeee
font-color-dafault = #515151

// layout
// -----------------------------------------
@import "layout/top-bar"
@import "layout/footer"

// global
// -----------------------------------------
html,body
	height 100%

body
	background-color complementary
	font-family 'Roboto', sans-serif
	font-weight 300
	color font-color-dafault
	height 100%

// Dev view mode
// -----------------------------------------
div,nav,main,footer
	border 1px dashed #000

// Aboout main
// -----------------------------------------
.main-about
	row()
	justify(center)
	vertical-align(middle)
	height 100%

.heading-about-container
	col(12)

.heading-about
	font-size 72px
	font-weight 700
	margin 40px 0
	width 100%
	text-align center
	display block

@media screen and (max-width 480px)
	.heading-about
		font-size 52px

.paragraph-about
	text-align center
	font-size 24px
	padding 0 150px

@media screen and (max-width 800px)
	.paragraph-about
		font-size 20px
		padding 0 50px

@media screen and (max-width 480px)
	.paragraph-about
		font-size 18px
		padding 0 20px

.paragraph-about strong
	color highlight
	font-weight 400

.social-icons-container
	col(12)
	text-align center
	margin 10px 0

.social-icons-container a
	padding 5px 7px
	display inline-block
