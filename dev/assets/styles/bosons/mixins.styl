//article
.box
	col(6)
	offset(3)
	padding 10px
	background #fff
	margin-top 10px
	margin-bottom 10px
	@media screen and (max-width 950px)
		col(8)
		offset(2)
	@media screen and (max-width 790px)
		col(10)
		offset(1)
	@media screen and (max-width 630px)
		col(12)
		offset()
		margin 5px 10px

.box img
	width 100%
	margin-bottom 10px
